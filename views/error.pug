doctype html
html.page-error
    head
        title XLink Menu
        link(rel="manifest" href="/static/manifest.json")
        link(rel='stylesheet', href='/static/style.css')
        link(rel='stylesheet', href='/static/fontawesome-pro-6.5.1-web/css/all.css')
        script(rel='script', href='/static/menu.js')
        script(rel='script', href='/static/fontawesome-pro-6.5.1-web/js/all.js')
    body
        div.header-bar
            div(onclick="history.back(1); return false;" style="margin-right: auto;")
                i.fa-regular.fa-arrow-left
                span Back
            div(style="float: right;")
                span AmusementVISION
        div.error-box
            div.error-icon
                i.fa-regular.fa-exclamation-triangle.fa-3x
            div.error-text
                span System Error
                if (message)
                    span(style="padding-top: 0.5em;") !{message}
                else
                    span(style="padding-top: 0.5em;") Failed to get a valid response from the MCU unit
